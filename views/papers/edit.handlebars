<h1>Edit Paper</h1>
<div class="row">
    <form action="/papers/{{paper.id}}?_method=PUT" method="post" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{paper.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status">
                    {{#select paper.status}}
                        <option value="public" selected>Public</option>
                        <option value="private">Private</option>
                        <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <p>
                <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if paper.allowComments}} checked="checked" {{/if}}>
                <label for="allowComments">Allow Comments</label>
            </p>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Propose Your Paper Idea</h5>
                <textarea name="body">
                    {{!-- <label for="title">Title</label> --}}
                    {{{paper.body}}}
                </textarea>
            </div>
        </div>

        <input type="submit" value="Save" class="btn">
    </form>
</div>